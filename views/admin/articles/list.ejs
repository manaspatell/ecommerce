<%- include('../partials/header', { title: 'Articles' }) %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-file-text"></i> Articles</h1>
        <a href="/admin/articles/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Article
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Views</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (articles && articles.length > 0) { %>
                            <% articles.forEach(article => { %>
                                <tr>
                                    <td><%= article.title %></td>
                                    <td><%= article.category %></td>
                                    <td>
                                        <span class="badge bg-<%= article.status === 'published' ? 'success' : 'secondary' %>">
                                            <%= article.status %>
                                        </span>
                                    </td>
                                    <td><%= article.views || 0 %></td>
                                    <td><%= new Date(article.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/articles/edit/<%= article._id %>" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form action="/admin/articles/delete/<%= article._id %>" method="POST" 
                                              style="display: inline;" 
                                              onsubmit="return confirm('Are you sure?')">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center">No articles found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

