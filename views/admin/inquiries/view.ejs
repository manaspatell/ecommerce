<%- include('../partials/header', { title: 'View Inquiry' }) %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-envelope"></i> Inquiry Details</h1>
        <a href="/admin/inquiries" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Customer Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> <%= inquiry.name %></p>
                    <p><strong>Email:</strong> <a href="mailto:<%= inquiry.email %>"><%= inquiry.email %></a></p>
                    <p><strong>Phone:</strong> <a href="tel:<%= inquiry.phone %>"><%= inquiry.phone %></a></p>
                    <p><strong>Date:</strong> <%= new Date(inquiry.created_at).toLocaleString() %></p>
                    <p><strong>Status:</strong> 
                        <span class="badge bg-<%= inquiry.status === 'new' ? 'danger' : inquiry.status === 'contacted' ? 'warning' : 'success' %>">
                            <%= inquiry.status %>
                        </span>
                    </p>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h5>Message</h5>
                </div>
                <div class="card-body">
                    <p><%= inquiry.message %></p>
                </div>
            </div>

            <% if (inquiry.product_ids && inquiry.product_ids.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h5>Products Inquired</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% inquiry.product_ids.forEach(product => { %>
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <% if (product.images && product.images.length > 0) { %>
                                                <img src="<%= product.images[0] %>" class="img-fluid mb-2" 
                                                     style="max-height: 150px; object-fit: cover;">
                                            <% } %>
                                            <h6><%= product.name %></h6>
                                            <p class="text-muted">â‚¹<%= product.price.toLocaleString() %></p>
                                            <a href="/product/<%= product.slug %>" target="_blank" class="btn btn-sm btn-primary">
                                                View Product
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Actions</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Update Status</label>
                        <select class="form-select" id="statusSelect">
                            <option value="new" <%= inquiry.status === 'new' ? 'selected' : '' %>>New</option>
                            <option value="contacted" <%= inquiry.status === 'contacted' ? 'selected' : '' %>>Contacted</option>
                            <option value="closed" <%= inquiry.status === 'closed' ? 'selected' : '' %>>Closed</option>
                        </select>
                    </div>
                    <button class="btn btn-primary w-100 mb-2" onclick="updateStatus()">
                        Update Status
                    </button>
                    <a href="mailto:<%= inquiry.email %>" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-envelope"></i> Reply via Email
                    </a>
                    <button class="btn btn-danger w-100" onclick="deleteInquiry()">
                        <i class="bi bi-trash"></i> Delete Inquiry
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function updateStatus() {
    const status = document.getElementById('statusSelect').value;
    fetch('/admin/inquiries/update-status/<%= inquiry._id %>', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    });
}

function deleteInquiry() {
    if (!confirm('Are you sure you want to delete this inquiry?')) return;
    
    fetch('/admin/inquiries/delete/<%= inquiry._id %>', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            window.location.href = '/admin/inquiries';
        }
    });
}
</script>

<%- include('../partials/footer') %>

