                            <i class="bi bi-envelope"></i> Inquiries
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/articles">
                            <i class="bi bi-file-text"></i> Articles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/banners">
                            <i class="bi bi-image"></i> Banners
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/" target="_blank">
                            <i class="bi bi-globe"></i> View Site
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

